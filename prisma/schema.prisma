// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model Review {
  id              String   @id @default(cuid())
  shop            String
  productId       String?  // Shopify product GID, null for company reviews
  productTitle    String?
  productHandle   String?  // Shopify product URL handle, for linking to product pages
  customerId      String?  // Shopify customer GID
  customerEmail   String
  customerName    String
  orderId         String?  // Shopify order GID for purchase verification
  type            String   // 'product' or 'company'
  rating          Int
  title           String
  content         String
  status          String   @default("pending") // 'pending', 'approved', 'rejected'
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  reply           String?  // Store owner's reply
  repliedAt       DateTime? // When the reply was added
  images          ReviewImage[]

  // Performance indexes for common queries
  @@index([shop]) // Admin dashboard - get all reviews for a shop
  @@index([shop, status]) // Get pending/approved reviews
  @@index([shop, status, type]) // Get reviews by type and status
  @@index([shop, productId, status]) // Get approved reviews for a product
  @@index([shop, customerEmail]) // Duplicate detection
  @@index([productId, status]) // Storefront queries for specific product
  @@index([createdAt]) // Sorting by date
}

model ReviewImage {
  id                    String   @id @default(cuid())
  reviewId              String
  filename              String
  url                   String   // Cloudinary URL
  cloudinaryPublicId    String?  // For easier deletion
  status                String   @default("pending") // 'pending', 'approved', 'rejected'
  review                Review   @relation(fields: [reviewId], references: [id], onDelete: Cascade)

  @@index([reviewId])
}

model ReviewRequestToken {
  id            String    @id @default(cuid())
  token         String    @unique
  shop          String
  productId     String
  productTitle  String
  customerId    String?
  customerEmail String
  customerName  String
  orderId       String?
  expiresAt     DateTime
  usedAt        DateTime?
  createdAt     DateTime  @default(now())

  @@index([shop, customerEmail, productId])
  @@index([expiresAt])
}

model DiscountCodeLog {
  id        String   @id @default(cuid())
  shop      String
  code      String
  createdAt DateTime @default(now())

  @@index([shop, createdAt])
}

model ShopSettings {
  id                    String   @id @default(cuid())
  shop                  String   @unique
  plan                  String   @default("free")
  requireVerifiedPurchase Boolean @default(false)
  autoApproveMinRating  Int     @default(0)  // 0 = off, 1-5 = auto-approve reviews with this rating or above
  enableSchemaMarkup    Boolean @default(true)
  reviewDiscountEnabled Boolean @default(false)
  reviewDiscountPercentage Int  @default(10)  // Percentage off (1-100)
  // Widget titles (shown as headings on the storefront)
  productReviewsTitle   String  @default("Customer Reviews")
  siteReviewsTitle      String  @default("What People Are Saying")
  carouselTitle         String  @default("What Our Customers Say")
  reviewFormTitle       String  @default("Write a Review")
  photoGalleryTitle     String  @default("Customer Photos")
  googlePlaceId         String?
  googleApiKey          String?
  // Global widget appearance
  widgetStarColor       String  @default("#f5a623")
  widgetPrimaryColor    String  @default("#000000")
  widgetBorderRadius    Int     @default(8)
  widgetBadgeColor      String  @default("#2e7d32")
  widgetBgColor         String  @default("#ffffff")
  widgetTextColor       String  @default("#444444")
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
