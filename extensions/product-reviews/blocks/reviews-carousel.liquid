{% assign block_id = block.id | replace: '-', '' %}

<div class="reviews-carousel-container" id="reviews-carousel-{{ block_id }}" data-block-id="{{ block_id }}" data-slides-per-view="{{ block.settings.slides_per_view }}" style="--slides-per-view: {{ block.settings.slides_per_view }}">
  <div class="carousel-header">
    <h2 class="carousel-title">{{ block.settings.title }}</h2>
  </div>

  <div class="carousel-wrapper">
    <button class="carousel-btn carousel-prev" id="prev-{{ block_id }}" aria-label="Previous reviews">&#8249;</button>

    <div class="carousel-track-container">
      <div class="carousel-track" id="track-{{ block_id }}">
        <p class="carousel-loading">Loading reviews...</p>
      </div>
    </div>

    <button class="carousel-btn carousel-next" id="next-{{ block_id }}" aria-label="Next reviews">&#8250;</button>
  </div>

  <div class="carousel-dots" id="dots-{{ block_id }}"></div>
</div>

<style>
  .reviews-carousel-container {
    padding: 2rem 1rem;
  }

  .carousel-header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .carousel-title {
    font-size: 1.75rem;
    margin: 0;
  }

  .carousel-wrapper {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .carousel-btn {
    background: #f5f5f5;
    border: 1px solid #ddd;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    font-size: 1.5rem;
    cursor: pointer;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }

  .carousel-btn:hover {
    background: #e5e5e5;
  }

  .carousel-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .carousel-track-container {
    overflow: hidden;
    flex: 1;
  }

  .carousel-track {
    display: flex;
    gap: 1rem;
    transition: transform 0.3s ease;
  }

  .carousel-loading {
    text-align: center;
    color: #666;
    padding: 2rem;
    width: 100%;
  }

  .carousel-slide {
    flex: 0 0 calc((100% - (var(--slides-per-view) - 1) * 1rem) / var(--slides-per-view));
    min-width: 0;
    background: #fff;
    border: 1px solid #e5e5e5;
    border-radius: 12px;
    padding: 1.5rem;
    box-sizing: border-box;
  }

  @media (max-width: 900px) {
    .reviews-carousel-container { --slides-per-view: 2 !important; }
  }

  @media (max-width: 600px) {
    .reviews-carousel-container { --slides-per-view: 1 !important; }

    .carousel-btn {
      display: none;
    }
  }

  .carousel-slide-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
  }

  .carousel-customer {
    font-weight: 600;
    font-size: 0.95rem;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.4rem;
  }

  .carousel-rating {
    color: #f5a623;
    font-size: 1rem;
  }

  .carousel-product {
    font-size: 0.8rem;
    color: #888;
    margin-bottom: 0.5rem;
  }

  .carousel-review-title {
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .carousel-review-content {
    color: #444;
    font-size: 0.9rem;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .carousel-verified {
    display: inline-block;
    background: var(--rv-badge-bg, #2e7d32);
    color: var(--rv-badge-text, #ffffff);
    font-size: 0.8rem;
    padding: 0.2rem 0.45rem;
    border-radius: 3px;
    flex-shrink: 0;
  }

  .carousel-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .carousel-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: #ddd;
    border: none;
    cursor: pointer;
    transition: background 0.2s;
  }

  .carousel-dot.active {
    background: #333;
  }

  .no-reviews-message {
    text-align: center;
    padding: 2rem;
    color: #666;
  }

  .carousel-images {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .carousel-image {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 6px;
    border: 1px solid #e5e5e5;
  }
</style>

<script>
  (function() {
    const blockId = '{{ block_id }}';
    const minRating = {{ block.settings.min_rating }};
    const maxReviews = {{ block.settings.max_reviews }};
    const showImages = {{ block.settings.show_images }};
    const autoPlay = {{ block.settings.auto_play }};
    const autoPlaySpeed = {{ block.settings.auto_play_speed | times: 1000 }};

    const track = document.getElementById('track-' + blockId);
    const prevBtn = document.getElementById('prev-' + blockId);
    const nextBtn = document.getElementById('next-' + blockId);
    const dotsContainer = document.getElementById('dots-' + blockId);

    const configuredPerView = parseInt(document.getElementById('reviews-carousel-' + blockId).dataset.slidesPerView) || 3;

    function contrastColor(hex) {
      const m = (hex || '#2e7d32').replace('#', '');
      if (m.length !== 6) return '#ffffff';
      const toLinear = c => { const s = parseInt(c, 16) / 255; return s <= 0.04045 ? s / 12.92 : Math.pow((s + 0.055) / 1.055, 2.4); };
      const L = 0.2126 * toLinear(m.slice(0,2)) + 0.7152 * toLinear(m.slice(2,4)) + 0.0722 * toLinear(m.slice(4,6));
      return L > 0.179 ? '#000000' : '#ffffff';
    }

    function applyAppearance(el, ap) {
      if (!ap || !el) return;
      if (ap.badgeColor) {
        el.style.setProperty('--rv-badge-bg', ap.badgeColor);
        el.style.setProperty('--rv-badge-text', contrastColor(ap.badgeColor));
      }
    }

    let currentIndex = 0;
    let slidesPerView = configuredPerView;
    let reviews = [];
    let autoPlayInterval = null;

    function updateSlidesPerView() {
      if (window.innerWidth <= 600) {
        slidesPerView = 1;
      } else if (window.innerWidth <= 900) {
        slidesPerView = Math.min(configuredPerView, 2);
      } else {
        slidesPerView = configuredPerView;
      }
    }

    async function loadReviews() {
      try {
        const response = await fetch('/apps/reviews?perPage=' + maxReviews + '&minRating=' + minRating);
        const data = await response.json();

        reviews = data.reviews;

        renderCarousel();
        if (autoPlay && reviews.length > slidesPerView) {
          startAutoPlay();
        }

        if (data && data.settings && data.settings.appearance) {
          applyAppearance(document.getElementById('reviews-carousel-' + blockId), data.settings.appearance);
        }
        if (data && data.settings && data.settings.widgetTitles && data.settings.widgetTitles.carousel) {
          const titleEl = document.querySelector('#reviews-carousel-' + blockId + ' .carousel-title');
          if (titleEl) titleEl.textContent = data.settings.widgetTitles.carousel;
        }
      } catch (error) {
        console.error('Error loading reviews:', error);
        track.innerHTML = '<p class="no-reviews-message">Unable to load reviews.</p>';
      }
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function renderCarousel() {
      if (reviews.length === 0) {
        track.innerHTML = '<p class="no-reviews-message">No reviews yet.</p>';
        prevBtn.style.display = 'none';
        nextBtn.style.display = 'none';
        return;
      }

      track.innerHTML = reviews.map(review => `
        <div class="carousel-slide">
          <div class="carousel-slide-header">
            <span class="carousel-customer">
              ${escapeHtml(review.customerName)}
              ${review.verifiedPurchase ? '<span class="carousel-verified">Verified</span>' : ''}
            </span>
            <span class="carousel-rating">${'★'.repeat(review.rating)}${'☆'.repeat(5 - review.rating)}</span>
          </div>
          <div class="carousel-review-title">${escapeHtml(review.title)}</div>
          <div class="carousel-review-content">${escapeHtml(review.content)}</div>
          ${showImages && review.images && review.images.length > 0 ? `
            <div class="carousel-images">
              ${review.images.slice(0, 2).map(img => `
                <img src="${escapeHtml(img.url)}" alt="Review photo" class="carousel-image" />
              `).join('')}
            </div>
          ` : ''}
        </div>
      `).join('');

      updateSlidesPerView();
      renderDots();
      updateCarousel();
    }

    function renderDots() {
      const totalDots = Math.ceil(reviews.length / slidesPerView);
      if (totalDots <= 1) {
        dotsContainer.innerHTML = '';
        return;
      }

      dotsContainer.innerHTML = Array(totalDots).fill(0).map((_, i) =>
        `<button class="carousel-dot ${i === 0 ? 'active' : ''}" data-index="${i}"></button>`
      ).join('');

      dotsContainer.querySelectorAll('.carousel-dot').forEach(dot => {
        dot.addEventListener('click', () => {
          currentIndex = parseInt(dot.dataset.index);
          updateCarousel();
          resetAutoPlay();
        });
      });
    }

    function updateCarousel() {
      const firstSlide = track.querySelector('.carousel-slide');
      if (!firstSlide) return;
      const slideWidth = firstSlide.offsetWidth;
      const lastSlide = track.querySelector('.carousel-slide:last-child');
      const lastSlideRight = lastSlide.offsetLeft + lastSlide.offsetWidth;
      const containerWidth = track.parentElement.offsetWidth;
      const maxOffset = Math.max(0, lastSlideRight - containerWidth);
      const gap = firstSlide.nextElementSibling
        ? firstSlide.nextElementSibling.offsetLeft - (firstSlide.offsetLeft + slideWidth)
        : 16;
      const rawOffset = currentIndex * (slideWidth + gap) * slidesPerView;
      const offset = Math.min(rawOffset, maxOffset);
      track.style.transform = `translateX(-${offset}px)`;

      dotsContainer.querySelectorAll('.carousel-dot').forEach((dot, i) => {
        dot.classList.toggle('active', i === currentIndex);
      });

      const maxIndex = Math.ceil(reviews.length / slidesPerView) - 1;
      prevBtn.disabled = currentIndex === 0;
      nextBtn.disabled = currentIndex >= maxIndex;
    }

    function goNext() {
      const maxIndex = Math.ceil(reviews.length / slidesPerView) - 1;
      if (currentIndex < maxIndex) {
        currentIndex++;
      } else {
        currentIndex = 0;
      }
      updateCarousel();
    }

    function goPrev() {
      if (currentIndex > 0) {
        currentIndex--;
      }
      updateCarousel();
    }

    function startAutoPlay() {
      if (autoPlayInterval) clearInterval(autoPlayInterval);
      autoPlayInterval = setInterval(goNext, autoPlaySpeed);
    }

    function resetAutoPlay() {
      if (autoPlay && reviews.length > slidesPerView) {
        startAutoPlay();
      }
    }

    prevBtn.addEventListener('click', () => {
      goPrev();
      resetAutoPlay();
    });

    nextBtn.addEventListener('click', () => {
      goNext();
      resetAutoPlay();
    });

    window.addEventListener('resize', () => {
      updateSlidesPerView();
      renderDots();
      updateCarousel();
    });

    loadReviews();
  })();
</script>

{% schema %}
{
  "name": "Reviews Carousel",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "What Our Customers Say"
    },
    {
      "type": "range",
      "id": "min_rating",
      "label": "Minimum Star Rating",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "slides_per_view",
      "label": "Reviews visible at once",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "max_reviews",
      "label": "Maximum Reviews to Show",
      "min": 3,
      "max": 24,
      "step": 1,
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "show_images",
      "label": "Show review images",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "auto_play",
      "label": "Auto-play carousel",
      "default": true
    },
    {
      "type": "range",
      "id": "auto_play_speed",
      "label": "Auto-play Speed (seconds)",
      "min": 2,
      "max": 10,
      "step": 1,
      "default": 5
    }
  ]
}
{% endschema %}
