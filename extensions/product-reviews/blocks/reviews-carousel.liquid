{% comment %}
  Reviews Carousel Block
  Shows recent high-rated reviews in a carousel for the home page
{% endcomment %}

{% assign block_id = block.id | replace: '-', '' %}

<div class="reviews-carousel-container" id="reviews-carousel-{{ block_id }}" data-block-id="{{ block_id }}">
  <div class="carousel-header">
    <h2 class="carousel-title">{{ block.settings.title }}</h2>
  </div>

  <div class="carousel-wrapper">
    <button class="carousel-btn carousel-prev" id="prev-{{ block_id }}" aria-label="Previous reviews">&#8249;</button>

    <div class="carousel-track-container">
      <div class="carousel-track" id="track-{{ block_id }}">
        <p class="carousel-loading">Loading reviews...</p>
      </div>
    </div>

    <button class="carousel-btn carousel-next" id="next-{{ block_id }}" aria-label="Next reviews">&#8250;</button>
  </div>

  <div class="carousel-dots" id="dots-{{ block_id }}"></div>
</div>

<style>
  .reviews-carousel-container {
    padding: 2rem 1rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .carousel-header {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .carousel-title {
    font-size: 1.75rem;
    margin: 0;
  }

  .carousel-wrapper {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .carousel-btn {
    background: #f5f5f5;
    border: 1px solid #ddd;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    font-size: 1.5rem;
    cursor: pointer;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }

  .carousel-btn:hover {
    background: #e5e5e5;
  }

  .carousel-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .carousel-track-container {
    overflow: hidden;
    flex: 1;
  }

  .carousel-track {
    display: flex;
    gap: 1rem;
    transition: transform 0.3s ease;
  }

  .carousel-loading {
    text-align: center;
    color: #666;
    padding: 2rem;
    width: 100%;
  }

  .carousel-slide {
    flex: 0 0 calc(33.333% - 0.67rem);
    min-width: 280px;
    background: #fff;
    border: 1px solid #e5e5e5;
    border-radius: 12px;
    padding: 1.5rem;
    box-sizing: border-box;
  }

  @media (max-width: 900px) {
    .carousel-slide {
      flex: 0 0 calc(50% - 0.5rem);
    }
  }

  @media (max-width: 600px) {
    .carousel-slide {
      flex: 0 0 100%;
    }

    .carousel-btn {
      display: none;
    }
  }

  .carousel-slide-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
  }

  .carousel-customer {
    font-weight: 600;
    font-size: 0.95rem;
  }

  .carousel-rating {
    color: #f5a623;
    font-size: 1rem;
  }

  .carousel-product {
    font-size: 0.8rem;
    color: #888;
    margin-bottom: 0.5rem;
  }

  .carousel-review-title {
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  .carousel-review-content {
    color: #444;
    font-size: 0.9rem;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .carousel-verified {
    display: inline-block;
    background: #e8f5e9;
    color: #2e7d32;
    font-size: 0.7rem;
    padding: 0.15rem 0.4rem;
    border-radius: 3px;
    margin-left: 0.5rem;
  }

  .carousel-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .carousel-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: #ddd;
    border: none;
    cursor: pointer;
    transition: background 0.2s;
  }

  .carousel-dot.active {
    background: #333;
  }

  .no-reviews-message {
    text-align: center;
    padding: 2rem;
    color: #666;
  }

  .carousel-images {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .carousel-image {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: 6px;
    border: 1px solid #e5e5e5;
  }
</style>

<script>
  (function() {
    const blockId = '{{ block_id }}';
    const minRating = {{ block.settings.min_rating }};
    const maxReviews = {{ block.settings.max_reviews }};
    const showImages = {{ block.settings.show_images }};
    const autoPlay = {{ block.settings.auto_play }};
    const autoPlaySpeed = {{ block.settings.auto_play_speed | times: 1000 }};

    const track = document.getElementById('track-' + blockId);
    const prevBtn = document.getElementById('prev-' + blockId);
    const nextBtn = document.getElementById('next-' + blockId);
    const dotsContainer = document.getElementById('dots-' + blockId);

    let currentIndex = 0;
    let slidesPerView = 3;
    let reviews = [];
    let autoPlayInterval = null;

    function updateSlidesPerView() {
      if (window.innerWidth <= 600) {
        slidesPerView = 1;
      } else if (window.innerWidth <= 900) {
        slidesPerView = 2;
      } else {
        slidesPerView = 3;
      }
    }

    async function loadReviews() {
      try {
        const response = await fetch('/apps/reviews?type=all');
        const data = await response.json();

        // Filter by minimum rating and limit count
        reviews = data.reviews
          .filter(r => r.rating >= minRating)
          .slice(0, maxReviews);

        renderCarousel();
        if (autoPlay && reviews.length > slidesPerView) {
          startAutoPlay();
        }
      } catch (error) {
        console.error('Error loading reviews:', error);
        track.innerHTML = '<p class="no-reviews-message">Unable to load reviews.</p>';
      }
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    function renderCarousel() {
      if (reviews.length === 0) {
        track.innerHTML = '<p class="no-reviews-message">No reviews yet.</p>';
        prevBtn.style.display = 'none';
        nextBtn.style.display = 'none';
        return;
      }

      track.innerHTML = reviews.map(review => `
        <div class="carousel-slide">
          <div class="carousel-slide-header">
            <span class="carousel-customer">
              ${escapeHtml(review.customerName)}
              ${review.verifiedPurchase ? '<span class="carousel-verified">Verified</span>' : ''}
            </span>
            <span class="carousel-rating">${'★'.repeat(review.rating)}${'☆'.repeat(5 - review.rating)}</span>
          </div>
          <div class="carousel-review-title">${escapeHtml(review.title)}</div>
          <div class="carousel-review-content">${escapeHtml(review.content)}</div>
          ${showImages && review.images && review.images.length > 0 ? `
            <div class="carousel-images">
              ${review.images.slice(0, 2).map(img => `
                <img src="${escapeHtml(img.url)}" alt="Review photo" class="carousel-image" />
              `).join('')}
            </div>
          ` : ''}
        </div>
      `).join('');

      updateSlidesPerView();
      renderDots();
      updateCarousel();
    }

    function renderDots() {
      const totalDots = Math.ceil(reviews.length / slidesPerView);
      if (totalDots <= 1) {
        dotsContainer.innerHTML = '';
        return;
      }

      dotsContainer.innerHTML = Array(totalDots).fill(0).map((_, i) =>
        `<button class="carousel-dot ${i === 0 ? 'active' : ''}" data-index="${i}"></button>`
      ).join('');

      dotsContainer.querySelectorAll('.carousel-dot').forEach(dot => {
        dot.addEventListener('click', () => {
          currentIndex = parseInt(dot.dataset.index);
          updateCarousel();
          resetAutoPlay();
        });
      });
    }

    function updateCarousel() {
      const slideWidth = track.querySelector('.carousel-slide')?.offsetWidth || 300;
      const gap = 16;
      const offset = currentIndex * (slideWidth + gap) * slidesPerView;
      track.style.transform = `translateX(-${offset}px)`;

      // Update dots
      dotsContainer.querySelectorAll('.carousel-dot').forEach((dot, i) => {
        dot.classList.toggle('active', i === currentIndex);
      });

      // Update buttons
      const maxIndex = Math.ceil(reviews.length / slidesPerView) - 1;
      prevBtn.disabled = currentIndex === 0;
      nextBtn.disabled = currentIndex >= maxIndex;
    }

    function goNext() {
      const maxIndex = Math.ceil(reviews.length / slidesPerView) - 1;
      if (currentIndex < maxIndex) {
        currentIndex++;
      } else {
        currentIndex = 0;
      }
      updateCarousel();
    }

    function goPrev() {
      if (currentIndex > 0) {
        currentIndex--;
      }
      updateCarousel();
    }

    function startAutoPlay() {
      if (autoPlayInterval) clearInterval(autoPlayInterval);
      autoPlayInterval = setInterval(goNext, autoPlaySpeed);
    }

    function resetAutoPlay() {
      if (autoPlay && reviews.length > slidesPerView) {
        startAutoPlay();
      }
    }

    prevBtn.addEventListener('click', () => {
      goPrev();
      resetAutoPlay();
    });

    nextBtn.addEventListener('click', () => {
      goNext();
      resetAutoPlay();
    });

    window.addEventListener('resize', () => {
      updateSlidesPerView();
      renderDots();
      updateCarousel();
    });

    loadReviews();
  })();
</script>

{% schema %}
{
  "name": "Reviews Carousel",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "What Our Customers Say"
    },
    {
      "type": "range",
      "id": "min_rating",
      "label": "Minimum Star Rating",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "max_reviews",
      "label": "Maximum Reviews to Show",
      "min": 3,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "show_images",
      "label": "Show review images",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "auto_play",
      "label": "Auto-play carousel",
      "default": true
    },
    {
      "type": "range",
      "id": "auto_play_speed",
      "label": "Auto-play Speed (seconds)",
      "min": 2,
      "max": 10,
      "step": 1,
      "default": 5
    }
  ]
}
{% endschema %}
