  .char-counter {
    display: block;
    margin-top: 0.35rem;
    font-size: 0.8rem;
    color: #999;
    text-align: right;
    opacity: 0;
    transition: opacity 0.3s ease, color 0.3s ease;
  }

  .char-counter.visible {
    opacity: 1;
  }

  .char-counter.warn {
    color: #e67e22;
  }

  .char-counter.over {
    color: #e74c3c;
  }
